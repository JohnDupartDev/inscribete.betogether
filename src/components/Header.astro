  <div class="max-w-7xl mx-auto px-4 md:px-6 py-2 flex items-center justify-between">

    <!-- Logo -->
    <a href="https://www.betogether.com.co/" class="flex items-center group cursor-pointer flex-shrink-0">
      <div class="flex items-center justify-center transform group-hover:rotate-6 transition-transform">
        <img 
          src="https://inscribete.betogether.com.co/wp-content/uploads/2026/02/logo-together.svg"
          alt="BeTogether Logo"
          class="w-auto h-12 md:h-16 object-contain"
          width="180"
          height="64"
        />
      </div>
    </a>

    <!-- Nav -->
    <nav class="hidden md:flex items-center gap-8 font-medium mx-auto">
      <a class="hover:text-primary transition-colors relative group py-2" href="#pilares">
