/* Hero Component - BeTogether Astro */
---
<section class="relative min-h-[90vh] lg:min-h-screen  lg:pt-20 pb-36 flex items-center overflow-hidden bg-background-dark">
    <div class="absolute inset-0 z-0">
        <picture>
            <img 
                alt="Emprendedor exitoso BeTogether" 
                class="w-full h-full object-cover scale-100"
                src="https://inscribete.betogether.com.co/wp-content/uploads/2026/02/portada-betogether.jpg"
                loading="eager"
                fetchpriority="high"
            />
        </picture>
        <div class="absolute inset-0 bg-black/40 z-10"></div>
        <div class="absolute inset-0 hero-gradient opacity-80 z-20"></div>
        
        <div class="absolute inset-0 opacity-30 z-30">
            <div class="absolute top-20 left-10 w-64 h-64 bg-primary rounded-full blur-3xl animate-float"></div>
            <div class="absolute bottom-20 right-10 w-96 h-96 bg-purple-600 rounded-full blur-3xl animate-pulse-slow"></div>
        </div>
    </div>

    <div class="relative z-40 max-w-7xl mx-auto px-6 w-full p-0">
        <div class="grid grid-cols-1 lg:grid-cols-[60%_40%] gap-12 items-center">
            <div class="space-y-8">
                <div class="inline-block animate-fade-in">
                    <span class="hidden md:block px-4 py-2 rounded-full bg-white/20 backdrop-blur-md border border-white/30 text-white text-xs md:text-sm font-bold uppercase tracking-widest">
